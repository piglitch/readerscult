extends layout

block content 
  h1(class="heading-text") #{title}<span class="dot"></span> 
  if bookinstance_list.length 
    dl 
      each val in bookinstance_list
        li(class="list-unstyled") 
          a(href=val.url) #{val.book.title} : #{val.imprint} - &nbsp;
          if val.status=="Available"
            span.text-success #{val.status}
          else if val.status=="Maintenance"
            span.tetx-danger #{val.status}
          else  
            span.text-warning #{val.status}
          if val.status!='Available'
            span (Due: #{val.due_back_formatted})
        p    
  else 
    p There are no book copies in this library.
  script(src='/javascript/redDotToggle.js')  

